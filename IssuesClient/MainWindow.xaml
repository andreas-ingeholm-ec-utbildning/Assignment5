<Window x:Class="IssuesClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IssuesClient"
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:viewModels="clr-namespace:IssuesClient.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:Background="#202020"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}, Path=View}">

    <Grid>
        <wpfui:NavigationStore>
            <wpfui:NavigationStore.Items>
                <wpfui:NavigationItem Content="Reports" Icon="List28" Command="{Binding OpenReportsCommand}"/>
                <wpfui:NavigationItem Content="Users" Icon="List28" Command="{Binding OpenUsersCommand}"/>
            </wpfui:NavigationStore.Items>
        </wpfui:NavigationStore>
    </Grid>
    
</Window>
