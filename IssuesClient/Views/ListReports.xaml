<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:models="clr-namespace:IssuesClient.Models"
                    xmlns:viewModels="clr-namespace:IssuesClient.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:ListReports}">

        <DockPanel>

            <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,0,-4,0">
                <wpfui:Button Icon="CommentAdd48" ToolTip="Add new issue..."/>
            </StackPanel>

            <ListBox>

                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Report}">
                        <wpfui:CardExpander Header="{Binding Title}">
                            
                        </wpfui:CardExpander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                
            </ListBox>
            
        </DockPanel>
        
    </DataTemplate>

</ResourceDictionary>